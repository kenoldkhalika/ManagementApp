<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/backwards"
        android:layout_width="77dp"
        android:layout_height="52dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-8dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-2dp"
        android:src="@drawable/ic_action_backwards" />
        <EditText
            android:id="@+id/updatefname"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <EditText
            android:id="@+id/updatelname"
            android:layout_width="match_parent"
            android:layout_below="@+id/updatefname"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
             />

        <EditText
            android:id="@+id/updateaddres"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/updatelname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

        <EditText
            android:id="@+id/updatenextofkin"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/updateaddres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />


        <Button
            android:id="@+id/deleteEmployee"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/text_multline"
            android:layout_below="@+id/updatenextofkin"
            android:layout_height="wrap_content"
            android:text="DELETE" />

        <TextView
            android:id="@+id/updateEmployee"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/deleteEmployee"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="UPDATE"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />


</RelativeLayout>